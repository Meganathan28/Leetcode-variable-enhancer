{
    "manifest_version": 3,
    "name": "LeetCode Code Enhancer",
    "version": "1.0",
    "description": "Opens LeetCode problems and enhances code readability for all languages using Gemini API.",
    "permissions": ["activeTab", "scripting"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "content_scripts": [
      {
        "matches": ["https://leetcode.com/problems/*"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
  